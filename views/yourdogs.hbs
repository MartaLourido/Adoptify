<div class= "divbuttonfinder">

<a href="/"><button id = "del-btn" type="button" class="btn btn-warning btn-rounded">Home</button></a>
<a href="/shelters"><button id = "del-btn" type="button" class="btn btn-warning btn-rounded">Go back</button></a>  

</div>

<div class="text-center">
  {{#if message}}
  <h1>{{message}}</h1>
  {{/if}}
</div>

<div class="cardcontainer card-columns">  
      
  {{#each dogs}}
    
      <div class="card">
        <img src={{this.image}} class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <a href="/shelters/{{this.shelter}}/dogs/{{this._id}}"type="button" class="btn btn-warning btn-rounded">See this dog!</a>
        </div>
      </div>
    

  {{/each}}

</div>


{{#if errorMessage}}
  <div class="error">{{errorMessage}}</div>
{{/if}} 

