
<form method="POST" action='/shelters/{{loggedInUser._id}}/dogs/create'>

  <div class="form-group">
    <label for="formGroup2">Name</label>
    <input type="text" class="form-control" id="formGroup2" placeholder="Example input" name= "name">
  </div>
  <div class="form-group">
    <label for="formGroup3">Age</label>
    <input type="text" class="form-control" id="formGroup3" placeholder="Another input" name = "age">
  </div>
   <div class="form-group"> 
    <label for="formGroup4">Size</label>
    <select class="form-control" name= "size" id= "formGroup4"> 
     <option value="small">Small</option>
     <option value="medium">Medium</option>
     <option value="large">Large</option>
    </select> 
  </div>
   <div class="form-group">
    <label for="formGroup5">Description</label>
    <input type="text" class="form-control" id="formGroup5" placeholder="Other information" name = "description">
  </div>
  <div class= "form-group">
  <label for="city">Cities</label>
  <select class="form-control" name = "city"> 
   {{#each  CITIES}}
   <option value="{{this}}">{{this}}</option>
   {{/each}}
  </select>
  </div>
  <div class= "form-group">
   <label for="city">Gender</label>
  <select class="form-control" name = "gender"> 
      <option value="female">Female</option>
      <option value="male">Male</option>
  </select>
  </div>    
</div>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="true" id="defaultCheck1" name = "goodwkids">
      <label class="form-check-label" for="customCheck1">Good with kids</label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="true" id="defaultCheck1" name = "goodwdogs">
    <label class="form-check-label" for="customCheck1">Good with dogs</label>
  </div>
   <div class="form-group">
    <label for="formGroup6">Other</label>
    <input type="text" class="form-control" id="formGroup6" placeholder="Add here more relevant information" name = "other">
  </div>
    <div class="form-group">
    <label for="formGroup6">Add image</label>
    <input type="text" class="form-control" id="formGroup6" placeholder="Add here image url" name = "image">
  </div>

  <div class="col-auto my-1">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>

{{#if errorMessage}}
  <div class="error">{{errorMessage}}</div>
{{/if}} 

