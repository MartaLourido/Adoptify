<div class= "divbuttonfinder">
<a href="/"><button type="button" class="btn btn-warning btn-rounded">Home</button></a>  
<a href="/adopters"><button type="button" class="btn btn-warning btn-rounded">Go back</button></a>
</div>

<form method="POST" action='/adopters/edit'>
<div class="flex-section">
<form class="editadopterform profile-section" method="POST" action='/adopters/edit'>
  <div class="form-group">
    <label for="formGroup1">Name</label>
    <input type="text" class="form-control" id="formGroup1" placeholder="Name" value = "{{adopter.name}}">
  </div>
  <div class="form-group">
    <label for="formGroup2">Email</label>
    <input type="text" class="form-control" id="formGroup2" placeholder="Change your email" value = "{{adopter.email}}">
  </div>
<div class="form-group">
    <label for="formGroup4">City</label>
    <input type="text" name="city" class="form-control" id="formGroup4" placeholder="Add more information" value = "{{adopter.city}}">
  </div>
   <div class="form-group">
    <label for="formGroup4">About me</label>
    <input type="text" name="aboutMe" class="form-control" id="formGroup4" placeholder="Add more information" value = "{{adopter.aboutMe}}">
  </div>
   <div class="form-group">
    <label for="formGroup6">Do you want be a volunteer?</label>
    <input type="text" name="volunteer" class="form-control" id="formGroup6" placeholder="Add more information" value = "{{adopter.volunteer}}">
  </div>
   <div class="form-group">
    <label for="formGroup7">Other</label>
    <input type="text" name="other" class="form-control" id="formGroup7" placeholder="Add more information" value = "{{adopter.other}}">
  </div>
<button id = "del-btn" type="button" class="btn btn-warning btn-rounded">Submit</button>
</form>
</div>
{{#if errorMessage}}
  <div class="error">{{errorMessage}}</div>
{{/if}} 