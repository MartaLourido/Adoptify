 <a href="/shelters/{{loggedInUser._id}}/dogs/{{dog._id}}/edit"><button id = "del-btn" class="btn btn-danger">Go back</button></a> 
<form method="POST" action='/shelters/{{loggedInUser._id}}/dogs/{{dog._id}}/edit'>
  <div class="form-group">
    <label for="formGroup1">Name</label>
    <input name="name" type="text" class="form-control" id="formGroup1" placeholder="Name" value = "{{dog.name}}">
  </div>
  <div class="form-group">
    <label for="formGroup2">Age</label>
    <input name="age"type="text" class="form-control" id="formGroup2" placeholder="Add the age" value = "{{dog.age}}">
  </div>
  <div class="form-group">
    <label for="formGroup4">Size</label>
    <input type="text" name="size" class="form-control" id="formGroup4" placeholder="Change size" value = "{{dog.size}}">
  </div>
   <div class="form-group">
    <label for="formGroup3">Description</label>
    <input name="description" type="text" class="form-control" id="formGroup3" placeholder="Write a description"  value = "{{dog.description}}">
  </div>
  <div class="form-group">
    <label for="formGroup4">City</label>
    <input type="text" name="city" class="form-control" id="formGroup4" placeholder="Change your city" value = "{{dog.city}}">
  </div>
<div class="form-check">
    <input name="goodwkids" class="form-check-input" type="checkbox" {{#if dog.goodwkids}}checked{{/if}} value="true" id="defaultCheck1" name = "goodwkids">
      <label class="form-check-label" for="customCheck1">Good with kids</label>
  </div>
  <div class="form-check">
    <input name="goodwdogs"class="form-check-input" type="checkbox" {{#if dog.goodwdogs}}checked{{/if}} value="true" id="defaultCheck1" name = "goodwdogs">
    <label class="form-check-label" for="customCheck1">Good with dogs</label>
  </div>
  </div>
    <div class="form-group">
    <label for="formGroup6">Add image</label>
    <input type="text" class="form-control" id="formGroup6" placeholder="Add here image url" name = "image">
  </div>
   <div class="form-group">
    <label name="other" for="formGroup6">Other</label>
    <input type="text" class="form-control" id="formGroup6" placeholder="Add here more relevant information" name = "other" {{dog.other}}>
  </div>

<!-- <div class="form-group">
    <label for="formGroup4">Other</label>
    <input type="text" class="form-control" id="formGroup4" placeholder="Add more information" value = "{{dog.information}}">
  </div> -->
 
  <button type="submit">Save Changes</button>
</form>
{{#if errorMessage}}
  <div class="error">{{errorMessage}}</div>
{{/if}} 

